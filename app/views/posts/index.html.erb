    <div>
      
        <% like = posts.likes.find_by(user: current_user) %>
        <% if like %>

        <%= button_to 'Descurtir', post_like_path(posts, like), remote: true,  method: :delete %>
        Likes: <%= posts.likes.count %>
        <% else %>

        <%= button_to 'Curtir', post_likes_path(posts), remote: true,  method: :post %>
